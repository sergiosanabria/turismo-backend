<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Listado Grupos</h3>

                <div class="box-tools">
                    <div class="input-group" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control input-sm pull-right"
                               placeholder="Search">

                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">

                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Creado</th>
                        <th>Actualizado</th>
                        <th>Acciones</th>
                    </tr>

                    {% for group in groups %}
                        <tr>
                            <td>{{ group.id }}</td>
                            <td>{{ group.getName() }}</td>
                            <td>{% if group.creado %}{{ group.creado|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{% if group.actualizado %}{{ group.actualizado|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>

                                <a class="btn btn-default"
                                   href="{{ path('fos_user_group_show', {'groupName': group.getName()} ) }}"><i
                                            class="fa fa-eye"></i></a>

                                <a class="btn btn-default"
                                   href="{{ path('fos_user_group_edit', { 'groupName': group.getName() }) }}"><i
                                            class="fa fa-edit"></i></a>

                            </td>
                        </tr>
                    {% endfor %}

                </table>

                <div class="box-footer">
                    <a class="btn btn-primary" href="{{ path('fos_user_group_new') }}">
                        Nuevo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

